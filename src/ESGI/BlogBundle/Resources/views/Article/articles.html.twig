{% extends "ESGIBlogBundle::layout.html.twig" %}

{% block title %}ESGIBlogBundle:Article:articles{% endblock %}

{% block body %}
<h1>Welcome to the Article:articles page</h1>
    {# Afficher les contenus #}
    <div class="row">
        {% for article in articles %}
            <div class="col-sm-4 col-md-4">
                <div class="thumbnail">
                    <img src="{{ asset(article.image.webPath) }}" alt=""/>
                    <div class="caption">
                        <h3><a href="{{ path('see', {'id': article.id}) }}">{{ article.title }}</a></h3>
                    </div>
                </div>
            </div>
        {% else %}
            <p>{{'Pas de contenus disponible.'|trans}}</p>
        {% endfor %}
    </div>

    {# Pagination #}
    <nav class="text-center">
        <ul class="pagination">
            {# On utilise la fonction range(a, b) qui cr√©e un tableau de valeurs entre a et b #}
            {% for p in range(1, numberPage) %}
                <li{% if p == page %} class="active"{% endif %}>
                    <a href="{{ path('articles', {'page': p}) }}">{{ p }}</a>
                </li>
            {% endfor %}
        </ul>
    </nav>
{% endblock %}
